            },
            {
                id: 2,
                author: 'ä½è—¤èŠ±å­',
                text: 'ã‚ã‹ã‚Šã‚„ã™ã„èª¬æ˜ã‚ã‚ŠãŒã¨ã†ã”ã–ã„ã¾ã™ï¼å®Ÿéš›ã«ã‚³ãƒ¼ãƒ‰ä¾‹ã‚‚è¦‹ã›ã¦ã„ãŸã ã‘ã‚‹ã¨å¬‰ã—ã„ã§ã™ã€‚',
                time: '45åˆ†å‰',
                likes: 3,
                color: '#ec4899',
                isPro: false
            },
            {
                id: 3,
                author: 'å±±æœ¬éš†',
                text: 'ä¾‹ãˆã°ã€ãƒ¦ãƒ¼ã‚¶ãƒ¼IDãŒå¤‰ã‚ã£ãŸã¨ãã ã‘APIã‚’å©ããŸã„å ´åˆã¯ useEffect(() => { fetchUser(userId); }, [userId]); ã®ã‚ˆã†ã«æ›¸ãã¾ã™ã€‚',
                time: '30åˆ†å‰',
                likes: 8,
                color: '#6366f1',
                isPro: true
            }
        ];

        let selectedTags = [];
        let selectedCategory = null;
        let currentThread = null;

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            renderCategories();
            renderThreads();
            renderMentors();
            setupEventListeners();
        });

        function renderCategories() {
            const grid = document.getElementById('categoriesGrid');
            grid.innerHTML = categories.map(cat => `
                <div class="category-card" data-category="${cat.id}" onclick="selectCategory('${cat.id}')">
                    <div class="category-icon">${cat.icon}</div>
                    <div class="category-name">${cat.name}</div>
                    <div class="category-count">${cat.count.toLocaleString()} ç›¸è«‡</div>
                </div>
            `).join('');
        }

        function renderThreads(filter = 'all') {
            const list = document.getElementById('threadList');
            let filteredThreads = threads;

            if (filter !== 'all') {
                filteredThreads = threads.filter(t => {
                    if (filter === 'premium') return t.isPremium;
                    return t.status === filter;
                });
            }

            if (selectedCategory) {
                filteredThreads = filteredThreads.filter(t => t.category === selectedCategory);
            }

            list.innerHTML = filteredThreads.map(thread => `
                <div class="thread-card" onclick="openThreadDetail(${thread.id})">
                    <div class="thread-header">
                        <div>
                            <h3 class="thread-title">${thread.title}</h3>
                            <div class="thread-meta">
                                <span>ğŸ‘¤ ${thread.author}</span>
                                <span>ğŸ“… ${thread.date}</span>
                            </div>
                        </div>
                        <span class="thread-status ${getStatusClass(thread)}">${getStatusText(thread)}</span>
                    </div>
                    <div class="thread-tags">
                        ${thread.tags.map(tag => `<span class="tag">${tag}</span>`).join('')}
                    </div>
                    <p class="thread-description">${thread.description}</p>
                    <div class="thread-footer">
                        <div class="thread-participants">
                            ${generateAvatars(thread.participants)}
                            <span class="participant-count">+${thread.participants}äººãŒå‚åŠ </span>
                        </div>
                        <div class="thread-stats">
                            <span>ğŸ’¬ ${thread.comments}</span>
                            <span>ğŸ‘ ${thread.views}</span>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function getStatusClass(thread) {
            if (thread.isPremium) return 'status-premium';
            const classes = {
                'open': 'status-open',
                'progress': 'status-progress',
                'solved': 'status-solved'
            };
            return classes[thread.status] || 'status-open';
        }

        function getStatusText(thread) {
            if (thread.isPremium) return 'ğŸ‘‘ ãƒ—ãƒ¬ãƒŸã‚¢ãƒ ';
            const texts = {
                'open': 'å‹Ÿé›†ä¸­',
                'progress': 'é€²è¡Œä¸­',
                'solved': 'âœ“ è§£æ±ºæ¸ˆã¿'
            };
            return texts[thread.status] || 'å‹Ÿé›†ä¸­';
        }

        function generateAvatars(count) {
            const colors = ['#6366f1', '#ec4899', '#f59e0b', '#10b981', '#3b82f6'];
            let html = '';
            const show = Math.min(count, 4);
            for (let i = 0; i < show; i++) {
                html += `<div class="participant-avatar" style="background: ${colors[i % colors.length]};">
                    ${String.fromCharCode(65 + i)}
                </div>`;
            }
            return html;
        }

        function renderMentors() {
            const list = document.getElementById('mentorList');
            list.innerHTML = mentors.map(mentor => `
                <div class="mentor-item">
                    <div class="mentor-avatar" style="background: ${mentor.color};">
                        ${mentor.name.charAt(0)}
                    </div>
                    <div class="mentor-info">
                        <div class="mentor-name">${mentor.name}</div>
                        <div class="mentor-specialty">${mentor.specialty}</div>
                    </div>
                    <span class="mentor-badge ${mentor.isPro ? 'badge-pro' : 'badge-volunteer'}">
                        ${mentor.isPro ? 'PRO' : 'ãƒœãƒ©ãƒ³ãƒ†ã‚£ã‚¢'}
                    </span>
                </div>
            `).join('');
        }

        function setupEventListeners() {
            // Filter pills
            document.querySelectorAll('.filter-pill').forEach(pill => {
                pill.addEventListener('click', () => {
                    document.querySelectorAll('.filter-pill').forEach(p => p.classList.remove('active'));
                    pill.classList.add('active');
                    renderThreads(pill.dataset.filter);
                });
            });

            // Tags
            document.querySelectorAll('.form-tag').forEach(tag => {
                tag.addEventListener('click', () => {
                    tag.classList.toggle('selected');
                    const tagValue = tag.dataset.tag;
                    if (selectedTags.includes(tagValue)) {
                        selectedTags = selectedTags.filter(t => t !== tagValue);
                    } else {
                        selectedTags.push(tagValue);
                    }
                });
            });

            // Tabs
            document.querySelectorAll('.tab').forEach(tab => {
                tab.addEventListener('click', () => {
                    document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                });
            });
        }

        function selectCategory(categoryId) {
            const cards = document.querySelectorAll('.category-card');
            cards.forEach(card => {
                if (card.dataset.category === categoryId) {
                    card.classList.toggle('selected');
                    selectedCategory = card.classList.contains('selected') ? categoryId : null;
                } else {
                    card.classList.remove('selected');
                }
            });
            renderThreads(document.querySelector('.filter-pill.active')?.dataset.filter || 'all');
        }

        // Modal Functions
        function openCreateModal() {
            document.getElementById('createModal').classList.add('active');
        }

        function closeCreateModal() {
            document.getElementById('createModal').classList.remove('active');
        }

        function openThreadDetail(threadId) {
            currentThread = threads.find(t => t.id === threadId);
            if (!currentThread) return;

            document.getElementById('detailTitle').textContent = currentThread.title;
            document.getElementById('detailAuthor').textContent = currentThread.author;
            document.getElementById('detailDate').textContent = currentThread.date;
            document.getElementById('detailViews').textContent = currentThread.views;
            document.getElementById('detailCommentCount').textContent = currentThread.comments;
            document.getElementById('detailDescription').textContent = currentThread.description;
            
            const statusEl = document.getElementById('detailStatus');
            statusEl.className = `thread-status ${getStatusClass(currentThread)}`;
            statusEl.textContent = getStatusText(currentThread);

            // Show/hide project section
            document.getElementById('projectSection').style.display = currentThread.isProject ? 'block' : 'none';
            
            // Show/hide premium section
            document.getElementById('premiumSection').style.display = currentThread.isPremium ? 'block' : 'none';

            renderComments();
            document.getElementById('threadDetailModal').classList.add('active');
        }

        function closeThreadDetail() {
            document.getElementById('threadDetailModal').classList.remove('active');
        }

        function renderComments() {
            const list = document.getElementById('commentsList');
            list.innerHTML = comments.map(comment => `
                <div class="comment">
                    <div class="comment-avatar" style="background: ${comment.color};">
                        ${comment.author.charAt(0)}
                    </div>
                    <div class="comment-content">
                        <div class="comment-header">
                            <span class="comment-author">${comment.author}</span>
                            ${comment.isPro ? '<span class="mentor-badge badge-pro" style="font-size: 0.7rem;">PRO</span>' : ''}
                            <span class="comment-time">${comment.time}</span>
                        </div>
                        <p class="comment-text">${comment.text}</p>
                        <div class="comment-actions">
                            <span class="comment-action">ğŸ‘ ${comment.likes}</span>
                            <span class="comment-action">ğŸ’¬ è¿”ä¿¡</span>
                            <span class="comment-action">ğŸš© å ±å‘Š</span>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function createThread() {
            const title = document.getElementById('threadTitle').value;
            const category = document.getElementById('threadCategory').value;
            const description = document.getElementById('threadDescription').value;

            if (!title || !category || !description) {
                showNotification('å…¥åŠ›ã‚¨ãƒ©ãƒ¼', 'å…¨ã¦ã®é …ç›®ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„', false);
                return;
            }

            // Add new thread
            const newThread = {
                id: threads.length + 1,
                title,
                category,
                status: 'open',
                description,
                tags: selectedTags,
                author: 'ã‚ãªãŸ',
                participants: 0,
                comments: 0,
                views: 0,
                date: 'ãŸã£ãŸä»Š',
                isProject: document.querySelector('.tab.active')?.dataset.type === 'project',
                isPremium: document.querySelector('.tab.active')?.dataset.type === 'premium'
            };

            threads.unshift(newThread);
            renderThreads();
            closeCreateModal();
            showNotification('æŠ•ç¨¿å®Œäº†', 'ç›¸è«‡ãŒæŠ•ç¨¿ã•ã‚Œã¾ã—ãŸï¼');

            // Reset form
            document.getElementById('threadTitle').value = '';
            document.getElementById('threadCategory').value = '';
            document.getElementById('threadDescription').value = '';
            selectedTags = [];
            document.querySelectorAll('.form-tag').forEach(t => t.classList.remove('selected'));
        }

        function addComment() {
            const input = document.getElementById('commentInput');
            const text = input.value.trim();
            
            if (!text) return;

            const newComment = {
                id: comments.length + 1,
                author: 'ã‚ãªãŸ',
                text,
                time: 'ãŸã£ãŸä»Š',
                likes: 0,
                color: '#10b981',
                isPro: false
            };

            comments.push(newComment);
            renderComments();
            input.value = '';
            showNotification('ã‚³ãƒ¡ãƒ³ãƒˆæŠ•ç¨¿', 'ã‚³ãƒ¡ãƒ³ãƒˆãŒæŠ•ç¨¿ã•ã‚Œã¾ã—ãŸï¼');
        }

        function showNotification(title, message, success = true) {
            const notification = document.getElementById('notification');
            document.getElementById('notificationTitle').textContent = title;
            document.getElementById('notificationMessage').textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        function toggleUserMenu() {
            // User menu logic
            showNotification('ã‚ˆã†ã“ã', 'ãƒ¡ãƒ³ã‚¿ãƒªã‚¹ãƒˆã¸ã‚ˆã†ã“ãï¼');
        }

        function openProjectModal() {
            openCreateModal();
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelector('.tab[data-type="project"]').classList.add('active');
        }

        // Close modals on outside click
        document.querySelectorAll('.modal-overlay').forEach(overlay => {
            overlay.addEventListener('click', (e) => {
                if (e.target === overlay) {
                    overlay.classList.remove('active');
                }
            });
        });

        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', (e) => {
            if (e.key === 'Enter') {
                const query = e.target.value.toLowerCase();
                const filtered = threads.filter(t => 
                    t.title.toLowerCase().includes(query) || 
                    t.description.toLowerCase().includes(query) ||
                    t.tags.some(tag => tag.toLowerCase().includes(query))
                );
                
                const list = document.getElementById('threadList');
                if (filtered.length === 0) {
                    list.innerHTML = '<div style="text-align: center; padding: 40px; color: #6b7280;">æ¤œç´¢çµæœãŒã‚ã‚Šã¾ã›ã‚“</div>';
                } else {
                    // Temporarily replace threads for rendering
                    const originalThreads = [...threads];
                    threads.length = 0;
                    threads.push(...filtered);
                    renderThreads();
                    threads.length = 0;
                    threads.push(...originalThreads);
                }
            }
        });
    </script>
</body>
</html>
